{# CONFIG #}
{% block config %}
	{% set siteName = "Santha Accounting, LLC" %}
	{% set siteURL = "santhaaccounting.com" %}
	{%
		set bodyClasses = 'font-serif'
	%}
{% endblock %}

<!doctype html>
<html class="no-js" lang="en">

<head>
	<meta charset="UTF-8">
	<title>{{ title }} | {{ siteName }}</title>
	{% include "../includes/head.twig" %}
	{% block custom_css %}{% endblock %}
</head>

<body class="{{ bodyClasses }}">
	<div id="main-content">
		{% include "../includes/header.twig" %}
		{% block masthead %}{% endblock %}
		<main>
			{% block content %}{% endblock %}
		</main>
		{% include "../includes/footer.twig" %}
		{% include "../includes/sidebar.twig" %}
	</div>
	{% include "../includes/svg.twig" %}
	{% include "../includes/scripts.twig" %}
	{% block custom_javascript %}
	{% endblock %}
</body>

</html>
